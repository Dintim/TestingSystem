<Window x:Class="TestingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Создание тестов">
            <WrapPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Создание тестов" Padding="10" Margin="10"
                        Click="Button_Click"/>
                <Button Content="Редактирование тестов" Padding="10" Margin="10" IsEnabled="False"/>
            </WrapPanel>
        </TabItem>
        <TabItem Header="Другой модуль" IsEnabled="False"/>
    </TabControl>    

</Window>
